consul {
    address = "${CONSUL_URL}"
    retry {
        enabled = true
        attempts = 12
        backoff = "250ms"
    }
}
template {
    source      = "/etc/nginx/conf.d/load-balancer.conf.ctmpl"
    destination = "/etc/nginx/conf.d/load-balancer.conf"
    perms = 0600
    command = "s6-svc -h /var/run/s6/services/nginx/"
}